---
const { title, price, url, description, image } = Astro.props;
---

<div
  class="group relative border-2 border-black divide-y-2 divide-black shadow-large h-full rounded-2xl overflow-hidden">
  <div>
    <img
      alt={title}
      src={image}
      class="aspect-[384/246] bg-white object-cover bg-center h-full"
    />
  </div>
  <div class="p-8 bg-white text-black">
    <div
      class="flex items-center justify-between space-x-8 text-lg font-medium">
      <h3 class="text-xl lg:text-3xl">{title}</h3>
      <p>${price}</p>
    </div>
    <p class="mt-3 text-xl text-black line-clamp-2">{description}</p>
    <div class="mt-10 flex ">
      <a
        href={url}
        title={title}
        aria-label={title} class="text-black items-center shadow shadow-black text-lg font-semibold inline-flex px-6 focus:outline-none justify-center text-center bg-white border-black ease-in-out transform transition-all focus:ring-lila-700 focus:shadow-none border-2 duration-100 focus:bg-black focus:text-white py-3 rounded-lg h-16 tracking-wide focus:translate-y-1 w-full hover:text-lila-800 gap-3">
        Read more
      </a>
    </div>
  </div>
</div>
