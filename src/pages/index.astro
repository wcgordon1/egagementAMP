---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/landing/Hero.astro";
import Features from "../components/landing/Features.astro";
import Screenshots from "../components/landing/Screenshots.astro";
import Faq from "../components/landing/Faq.astro";
import Footer from "../components/global/Footer.astro";
import { AstroSeo } from "@astrolib/seo";
---

<!---
Use AstroSeo in all the pages you want different Seo than the index page
-->
<AstroSeo
  title="Flabbergasted || home"
  description="Your site description goes here"
  canonical="https://www.supremeui.dev"
  openGraph={{
    url: "https://www.supremeui.dev",
    title: "Open Graph Title",
    description: "Open Graph Description",
    images: [
      {
        url: "https://www.supremeui.dev/opengraph/social-og.jpg",
        width: 1200,
        height: 630,
        alt: "Social open graph",
        type: "image/jpeg",
      },
      {
        url: "https://www.supremeui.dev/opengraph/twitter-og.jpg",
        width: 4096,
        height: 4096,
        alt: "Twitter open graph",
        type: "image/jpeg",
      },
      { url: "https://www.supremeui.dev/opengraph/social-og.jpg" },
      { url: "https://www.supremeui.dev/opengraph/twitter-og.jpg" },
    ],
    site_name: "YourSitesName",
  }}
  twitter={{
    handle: "@TwitterHandle",
    site: "@site",
    cardType: "summary_large_image",
  }}
/>
<BaseLayout>
  <Hero />
  <Features />
  <Screenshots />
  <Faq />
  <Footer />
</BaseLayout>
