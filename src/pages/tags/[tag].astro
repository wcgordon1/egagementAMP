---
import BaseLayout from "../../layouts/BaseLayout.astro";
import BlogPost from "../../components/BlogPost.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const allPosts = await getCollection("posts");
  const uniqueTags = [
    ...new Set(allPosts.map((post) => post.data.tags).flat()),
  ];

  return uniqueTags.map((tag) => {
    const filteredPosts = allPosts.filter((post) =>
      post.data.tags.includes(tag)
    );
    return {
      params: { tag },
      props: { posts: filteredPosts },
    };
  });
}

const { tag } = Astro.params;
const { posts } = Astro.props;
---

<BaseLayout pageTitle={tag}>
  <section>
    <div
      class="relative items-center w-full mx-auto 2xl:max-w-7xl p-8 lg:p-20 2xl:px-0">
      <div class="max-w-xl mx-auto text-center">
        <h2 class="text-3xl lg:text-5xl font-display text-black">
          Posts tagged with...
        </h2>
      </div>
      <ol role="list" class="mt-16">
        <li>
          <ol
            role="list"
            class="divide-y-2 divide-black border-2 border-black shadow">
            {
              posts.map((post) => (
                <li aria-label="tags">
                  <BlogPost
                    url={"/posts/" + post.slug}
                    title={post.data.title}
                  />
                </li>
              ))
            }
          </ol>
        </li>
      </ol>
    </div>
  </section>
</BaseLayout>
